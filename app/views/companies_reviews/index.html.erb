<p id="notice"><%= notice %></p>

<h1>Companies Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Companies</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies_reviews.each do |companies_review| %>
      <tr>
        <td><%= companies_review.user_id %></td>
        <td><%= companies_review.companies_id %></td>
        <td><%= companies_review.review %></td>
        <td><%= link_to 'Show', companies_review %></td>
        <td><%= link_to 'Edit', edit_companies_review_path(companies_review) %></td>
        <td><%= link_to 'Destroy', companies_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

