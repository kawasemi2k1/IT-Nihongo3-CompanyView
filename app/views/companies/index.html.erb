<% if user_signed_in?%>
<h1>会社</h1>
<% if current_user.admin && current_user.admin%>
<%= link_to '会社作成', new_company_path %>
<% else %>
<% end %>
<table class="table table-hover">
  <thead class="">
    <tr>
      <th>名</th>
      <th>場所</th>
      <th>ウェブサイトリンク</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location %></td>
