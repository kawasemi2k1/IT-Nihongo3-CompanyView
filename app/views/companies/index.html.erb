        <td><%= link_to '削減', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% else %>
         <td><%= link_to '表示', company %></td>
         <% end %>
      </tr>
       
    <% end %>
  </tbody>
</table>
